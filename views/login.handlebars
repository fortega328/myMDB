<div class="row ">

  <div class="col-md-6  justify-content-center">



    <div class="card text-center border-light mb-3" style="max-width: 20rem;">
      <div class="card-header text-center">
        <h5>Login</h5>
      </div>
      <div class="card-body">

        <form class="form login-form">
          <div class="form-group">
            <label for="email-login">email:</label>
            <input class="form-input table-dark" type="text" id="email-login" />
          </div>
          <div class="form-group">
            <label for="password-login">password:</label>
            <input class="form-input table-dark" type="password" id="password-login" />
          </div>
          <div class="col text-center">
            <button class="btn btn btn-danger btn-lg"
              type="submit">login</button>
          </div>
        </form>
      </div>
    </div>
  </div>



  <div class="card border-light mb-3" style="max-width: 20rem;">

    <div class="card-header text-center">
      <h5>Signup</h5>
    </div>

    <div class="card-body">




      <form class="form signup-form">
        <div class="form-group">
          <label for="name-signup">name:</label>
          <input class="form-input table-dark" type="text" id="name-signup" />
        </div>

        <div class="form-group">
          <label for="email-signup">email:</label>
          <input class="form-input table-dark" type="text" id="email-signup" />
        </div>

        <div class="form-group">
          <label for="password-signup">password:</label>
          <input class="form-input table-dark" type="password" id="password-signup" />
        </div>

        <div class="form-group">
          <label for="exampleFormControlSelect2">Favorite genre</label>
          <select multiple class="form-control table-dark" id="genre-signup">
            <option>Horror</option>
            <option>Adventure</option>
            <option>Drama</option>
            <option>Action</option>
            <option>Comedy</option>
          </select>
        </div>

        <div class="col text-center">
          <button class="<button btn btn btn-danger btn-lg" type="submit">signup</button>
        </div>
      </form>
    </div>
  </div>
</div>

