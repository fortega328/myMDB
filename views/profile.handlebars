</nav>


<div class="pt-5 pb-5">
    <h2 class="text-center">Check Out These Top 3 Movies from the <span class="text-primary"
            id="genreValue">{{topGenre}}</span> genre!</h2>

</div>

<div class="card-columns col d-flex justify-content-center">
    <div class="card" style="width: 18rem;">
        <img class="card-img-top img-fluid" src="" alt="1st movie" id="movie1">
        <div class="card-body">
            <h5 class="text-center" id="movieTitle1"></h5>
            <p class="card-text text-success" id="movieDescription1"></p>
        </div>
    </div>

    <div class="card" style="width: 18rem;">
        <img class="card-img-top img-fluid" src="" alt="1st movie" id="movie2">
        <div class="card-body">
            <h5 class="text-center" id="movieTitle2"></h5>
            <p class="card-text text-success" id="movieDescription2"></p>
        </div>
    </div>

    <div class="card" style="width: 18rem;">
        <img class="card-img-top img-fluid" src="" alt="1st movie" id="movie3">
        <div class="card-body">
            <h5 class="text-center" id="movieTitle3"></h5>
            <p class="card-text text-success" id="movieDescription3"></p>
        </div>
    </div>


</div>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="" alt="">

                <div class="card-body">
                    <h5 class="card-title">Favorite Movies</h5>

                    <ul>
                        {{#each favmovies as |favmovie|}}
                        <li>{{favmovie.movie_name}}</li>
                        <img src={{favmovie.movie_url}}>
                        {{/each}}
                    </ul>
                    <form id="form">
                        <div class="form-group">
                            <input type="text" class="form-control" id="favmovieSearch" placeholder="Search Movie Here">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-danger" id="movieSearch">Search</button>
                            <button id="Onestar" class="rating-item btn-danger float-right" data-rate="1"></button>
                        </div>

                        <div class='align-center' id="videos">

                        </div>

                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-6 mb-4">
            <div class="card">


                <div class="card-body">
                    <h5 class="card-title">Trailers</h5>

                    <form id="youtube-form">
                        <div class="form-group">
                            <input type="text" class="form-control" id="search">
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-danger" value="Search">
                        </div>

                        <div class='align-center' id="youtube-videos">

                        </div>

                    </form>


                </div>
            </div>
        </div>
    </div>
</div>

